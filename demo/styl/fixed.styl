clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

.ft
  &-table-container
    border-right 1px solid #ddd
    overflow-y auto
    overflow-x hidden
    clearfix()

  &-table
    max-height 500px
    overflow-y auto

  &-row
    clear both
    float left
    clearfix()

    &-values
      clear both
      float left // gross hack to get flex container to match width of children

  &-col
    &:nth-child(1)
      width 400px

    &:nth-child(2), &:nth-child(3), &:nth-child(4)
      width 150px
