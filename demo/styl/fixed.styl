clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

.ft
  &-table
    overflow auto
    max-height 500px
    clearfix()

  &-row
    clear both
    float left // gross hack to get flex container to match width of children

  &-cell
    &:nth-child(1)
      width 200px

    &:nth-child(2), &:nth-child(3), &:nth-child(4)
      width 150px
